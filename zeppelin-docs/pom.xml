  <groupId>com.nflabs.zeppelin</groupId>
  <artifactId>zeppelin-docs</artifactId>
  <version>0.3.2-SNAPSHOT</version>
  <name>Zeppelin: Documentation</name>
  <url>http://www.nflabs.com</url>

    <!--
    Genarate HTML docs quickly while developing:
     - brew install python
     - pip install sphinx
    -->

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.mycila</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <configuration>
                        <excludes combine.children="append">
                            <exclude>**/*.conf</exclude>
                            <exclude>**/*.css_t</exclude>
                        </excludes>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.tomdz.maven</groupId>
                <artifactId>sphinx-maven-plugin</artifactId>
                <configuration>
                    <fork>true</fork>
                    <force>true</force>
                    <warningsAsErrors>true</warningsAsErrors>
                    <sourceDirectory>${project.basedir}/src/main/sphinx</sourceDirectory>
                    <outputDirectory>${project.build.directory}/html</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
