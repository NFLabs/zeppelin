<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
    <!-- format>zip</format -->
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>README.txt</include>
        <include>LICENSE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>zeppelin-package/bin</directory>
    </fileSet>
    <fileSet>
      <directory>zan-repo</directory>
    </fileSet>
    <fileSet>
      <includes>
        <include>zeppelin-package/conf</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>zeppelin-cli/target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
        <include>lib/*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>zeppelin-core/target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
        <include>lib/*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>zeppelin-hive-0.9-driver/target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
        <include>lib/*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>zeppelin-server/target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
        <include>lib/*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>zeppelin-web/target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.war</include>
        <include>lib/*.jar</include>
      </includes>
    </fileSet>


  </fileSets>
